CROSS_COMPILE =
CC = $(CROSS_COMPILE)gcc
CFLAGS = -O -g2 -DDEBUG -pthread -I/usr/include/gtk-3.0 -I/usr/include/pango-1.0 -I/usr/include/gio-unix-2.0/ -I/usr/include/atk-1.0 -I/usr/include/cairo -I/usr/include/gdk-pixbuf-2.0 -I/usr/include/freetype2 -I/usr/include/glib-2.0 -I/usr/lib/i386-linux-gnu/glib-2.0/include -I/usr/include/pixman-1 -I/usr/include/libpng12
LDFLAGS = -lgtk-3 -lgdk-3 -latk-1.0 -lgio-2.0 -lpangocairo-1.0 -lgdk_pixbuf-2.0 -lcairo-gobject -lpango-1.0 -lcairo -lgobject-2.0 -lglib-2.0
LDLIBS =
INC = -I ../pub/
LN = $(CC)
RM = rm -f
MV = mv
AR = $(CROSS_COMPILE)ar

OBJS = base.o watcher.o map.o

all: base

All: clean base

base: $(OBJS)
	$(LN) -o base $(OBJS) $(LDFLAGS) $(LDLIBS)

$(OBJS): %.o: %.c
	$(CC) $(CFLAGS) -c $(INC) $< -o $@

.PHONY: clean
clean:
	-$(RM) *.o base
